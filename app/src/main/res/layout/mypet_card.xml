<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mypet_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="4dp">

    <!-- Pet Image -->
    <!-- android:src="@drawable/ic_pet_image1" -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/pet_image"
        android:contentDescription="Pet Image"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp" />

    <!-- Pet Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daisy"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/pet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cavalier King Charles Spaniel"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/pet_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Years"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- Edit and Delete Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <android.widget.Button
            android:id="@+id/btn_edit_pet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:textAllCaps="false"
            android:textColor="#84945A"
            android:background="@null"
            android:drawableStart="@drawable/ic_edit"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />

        <android.widget.Button
            android:id="@+id/btn_delete_pet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textAllCaps="false"
            android:textColor="#a3aa7f"
            android:background="@null"
            android:drawableStart="@drawable/ic_delete"
            android:padding="8dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>