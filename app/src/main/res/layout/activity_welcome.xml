<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a3aa7f"
    android:padding="16dp">

    <!-- ViewPager for Image Carousel -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginBottom="16dp" />

    <!-- Carousel Dots (Indicator) -->
    <!--  1234  -->
    <LinearLayout
        android:id="@+id/indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center">

        <!-- Three Dots for Three Images -->
        <ImageView
            android:id="@+id/dot1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_inactive" />

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_inactive" />

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/dot_inactive" />
    </LinearLayout>

    <!-- Text Content Below the Images -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adopting instead of buying"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will help you to choose your lovely pet. Save a life. Adopt a pet."
        android:textSize="16sp"
        android:textColor="#f0f0f0"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:backgroundTint="#f7b64e"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />
</LinearLayout>
