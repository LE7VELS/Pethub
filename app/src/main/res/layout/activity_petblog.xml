<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_background">

    <!-- Top Bar with Search Functionality -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#a3aa7f"
        android:padding="16dp"
        android:gravity="center_vertical" >

        <!-- Share Button -->
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:contentDescription="@string/share_button"
            android:src="@drawable/ic_share_white"
            android:id="@+id/iv_share_blog"
            android:layout_gravity="center_vertical"/>

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/find_interesting_pet_blogs"
            android:backgroundTint="#ffffff"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"/>

        <!-- Search Button -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:backgroundTint="#ffffff"
            android:textColor="#a3aa7f"
            android:textAllCaps="false"
            android:padding="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Category Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#ffffff"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_latest_tab"
            android:text="Latest"
            android:textColor="#888888"
            android:textStyle="bold"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dogs"
            android:id="@+id/blog_dogs_tab"
            android:textColor="#888888"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cats"
            android:id="@+id/blog_cats_tab"
            android:textColor="#888888"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            android:id="@+id/blog_birds_tab"
            android:textColor="#888888"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:id="@+id/blog_others_tab"
            android:textColor="#888888"
            android:padding="8dp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Blog Posts Grid -->
    <GridView
        android:id="@+id/blog_grid_view"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="8dp"
        android:padding="16dp" />

    <!-- Bottom Navigation Bar -->
    <!--  remember set id to use  -->
    <include
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
