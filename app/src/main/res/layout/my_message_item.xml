<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:elevation="2dp"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

        <!-- Sender Image -->
        <!-- android:src="@drawable/sample_user_image" -->

        <ImageView
            android:id="@+id/request_user_avatar"

            android:layout_width="40dp"
            android:layout_height="40dp"

            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <!-- Message Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/request_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jimmy Zhang"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/request_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, I want to adopt Daisy"
                android:textColor="#888888"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Message Time -->
        <TextView
            android:id="@+id/request_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:01"
            android:textColor="#a3aa7f"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>