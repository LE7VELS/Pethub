<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#a3aa7f"
        android:paddingBottom="24dp"
        android:layout_weight="1">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:gravity="center" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good to see you here!"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:gravity="center" />

        <!-- Dog Image -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_dog_image"
            android:contentDescription="Dog Image"
            android:layout_gravity="center"
            android:padding="8dp" />

    </LinearLayout>

    <!-- First and Last Name Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:backgroundTint="#d4d8aa"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:backgroundTint="#d4d8aa"
            android:padding="8dp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Email Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:backgroundTint="#d4d8aa"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:backgroundTint="#d4d8aa"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" />

    <!-- Re-type Password Field -->
    <EditText
        android:id="@+id/retype_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re-type Password"
        android:backgroundTint="#d4d8aa"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_weight="1" />

    <!-- Upload Photo Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload your photo"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_upload"
            android:background="@drawable/gray_square"
            android:contentDescription="Upload Photo"
            android:layout_marginBottom="16dp"
            android:padding="16dp" />
    </LinearLayout>

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:backgroundTint="#a3aa7f"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:layout_weight="1" />

</LinearLayout>
